@import "tailwindcss";
@plugin "@tailwindcss/typography";
@theme inline {
  /* Warm Amber - ciepy bursztyn (primary) */
  --color-primary-50: #FFFBEB;
  --color-primary-100: #FEF3C7;
  --color-primary-200: #FDE68A;
  --color-primary-300: #FCD34D;
  --color-primary-400: #FBBF24;
  --color-primary-500: #F59E0B;
  --color-primary-600: #D97706;
  --color-primary-700: #B45309;
  --color-primary-800: #92400E;
  --color-primary-900: #78350F;
  /* Soft Peach - delikatny brzoskwiniowy (secondary) */
  --color-secondary-50: #FFF7ED;
  --color-secondary-100: #FFEDD5;
  --color-secondary-200: #FED7AA;
  --color-secondary-300: #FDBA74;
  --color-secondary-500: #FB923C;
  /* Coral - ososiowy akcent */
  --color-accent-50: #FFF1F2;
  --color-accent-100: #FFE4E6;
  --color-accent-200: #FECDD3;
  --color-accent-300: #FDA4AF;
  --color-accent-500: #FB7185;
  --color-accent-600: #F43F5E;
  --color-accent-700: #E11D48;
  /* Warm Neutrals - ciepe szaroci */
  --color-neutral-50: #FAFAF9;
  --color-neutral-100: #F5F5F4;
  --color-neutral-200: #E7E5E4;
  --color-neutral-300: #D6D3D1;
  --color-neutral-400: #A8A29E;
  --color-neutral-500: #78716C;
  --color-neutral-600: #57534E;
  --color-neutral-700: #44403C;
  --color-neutral-800: #292524;
  --color-neutral-900: #1C1917;
  /* Success - turkusowy zielony */
  --color-success-50: #F0FDFA;
  --color-success-100: #CCFBF1;
  --color-success-500: #14B8A6;
  --color-success-700: #0F766E;
  /* Warning - bursztynowy (u偶ywamy primary) */
  --color-warning-500: #F59E0B;
  --color-warning-700: #D97706;
}

:root {
  --background: #ffffff;
  --foreground: #1C1917;
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #1C1917;
    --foreground: #FAFAF9;
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: Arial, Helvetica, sans-serif;
}

/* Leaflet popup button override */
.leaflet-popup-content a {
  background-color: #F43F5E !important;
  color: white !important;
  text-decoration: none !important;
}

.leaflet-popup-content a:hover {
  background-color: #E11D48 !important;
}

/* ========================================
    DESIGN IMPROVEMENTS - "Subtle & Classy"
   ======================================== */

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}

/* Professional focus states (accessibility) */
button:focus-visible,
input:focus-visible,
select:focus-visible,
textarea:focus-visible,
a:focus-visible {
  outline: 2px solid #F43F5E;
  outline-offset: 2px;
  border-radius: 4px;
}

/* Remove default focus outline (we have better one above) */
button:focus:not(:focus-visible),
input:focus:not(:focus-visible),
select:focus:not(:focus-visible),
textarea:focus:not(:focus-visible),
a:focus:not(:focus-visible) {
  outline: none;
}

/* Smooth transitions for interactive elements (subtle!) */
button,
a,
input,
select,
textarea {
  transition: background-color 0.2s ease, 
              color 0.2s ease, 
              border-color 0.2s ease,
              box-shadow 0.2s ease,
              transform 0.2s ease;
}

/* Better text selection color */
::selection {
  background-color: #FECDD3;
  color: #1C1917;
}

::-moz-selection {
  background-color: #FECDD3;
  color: #1C1917;
}

/* Smooth scrollbar (WebKit browsers - Chrome, Safari, Edge) */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: #F5F5F4;
}

::-webkit-scrollbar-thumb {
  background: #D6D3D1;
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: #A8A29E;
}

/* Hide scrollbar utility class (for horizontal carousels) */
.scrollbar-hide::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

.scrollbar-hide {
  -ms-overflow-style: none; /* IE and Edge */
  scrollbar-width: none; /* Firefox */
}

/* ========================================
    PROSE TYPOGRAPHY - Senior-Friendly
   ======================================== */

/* Base prose sizing for better readability */
.prose {
  font-size: 1.125rem; /* 18px base */
  line-height: 1.75; /* loose leading */
}

@media (min-width: 768px) {
  .prose {
    font-size: 1.25rem; /* 20px desktop */
  }
}

/* Paragraph spacing and line height */
.prose p {
  line-height: 1.75;
  margin-bottom: 1.5rem;
}

@media (min-width: 768px) {
  .prose p {
    margin-bottom: 2rem;
  }
}

/* List spacing for better readability */
.prose ul,
.prose ol {
  margin-top: 1rem;
  margin-bottom: 1rem;
}

.prose li {
  font-size: 1.125rem; /* 18px */
  line-height: 1.75;
  margin-top: 0.75rem;
  margin-bottom: 0.75rem;
}

@media (min-width: 768px) {
  .prose li {
    font-size: 1.25rem; /* 20px desktop */
  }
}

/* Heading hierarchy with better scaling */
.prose h2 {
  font-size: 1.5rem; /* 24px */
  font-weight: 700;
  margin-top: 4rem; /* 64px */
  margin-bottom: 2rem; /* 32px */
  line-height: 1.3;
}

@media (min-width: 768px) {
  .prose h2 {
    font-size: 1.875rem; /* 30px */
  }
}

@media (min-width: 1024px) {
  .prose h2 {
    font-size: 2.25rem; /* 36px */
  }
}

.prose h3 {
  font-size: 1.25rem; /* 20px */
  font-weight: 600;
  margin-top: 3rem; /* 48px */
  margin-bottom: 1.5rem; /* 24px */
  line-height: 1.4;
}

@media (min-width: 768px) {
  .prose h3 {
    font-size: 1.5rem; /* 24px */
  }
}

/* ========================================
    DPS COMPARISON TABLE STYLES (Final Version)
   ======================================== */

.dps-comparison-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem; 
    margin-bottom: 2rem;
    font-size: 1.125rem; /* Zachowujemy du偶 czcionk dla czytelnoci (18px) */
    line-height: 1.5;
    /* Dodajemy lekk ramk wok贸 caej tabeli dla odseparowania */
    border: 1px solid var(--color-neutral-300); 
    border-radius: 8px; /* Lekkie zaokrglenie krawdzi */
    overflow: hidden; /* Aby ramka dziaaa z border-radius */
}

/* Nag贸wki tabeli (TH) */
.dps-comparison-table th {
    /* U偶ycie ciemniejszego neutralnego ta, aby nag贸wki byy bardziej wyra藕ne */
    background-color: var(--color-neutral-200); 
    padding: 18px 16px; /* Wikszy padding dla lepszej czytelnoci */
    text-align: left;
    font-weight: 700;
    color: var(--color-neutral-700);
    /* U偶ywamy PRIMARY (Amber) jako separatora wizualnego */
    border-bottom: 4px solid var(--color-primary-500); 
}

/* Kom贸rki danych (TD) */
.dps-comparison-table td {
    padding: 16px; 
    border-bottom: 1px solid var(--color-neutral-200); /* Cienka, delikatna linia */
    vertical-align: top;
    color: var(--color-neutral-700);
}

/* Ostatni wiersz bez dolnej ramki */
.dps-comparison-table tbody tr:last-child td {
    border-bottom: none;
}

/* Wyr贸偶nienie najwa偶niejszych wierszy (DPS dla senior贸w, rehab, psych.) */
.dps-comparison-table .dps-type-main {
    /* U偶ycie najjaniejszego koloru pierwotnego (Amber) */
    background-color: var(--color-primary-50); 
    font-weight: 500;
}

/* Wyra藕niejszy kolor dla tytu贸w g贸wnych typ贸w w kolumnie */
.dps-comparison-table .dps-type-main strong {
    color: var(--color-primary-800); 
}

/* Efekt hover dla lepszej interakcji */
.dps-comparison-table tr:hover {
    background-color: var(--color-neutral-100); 
}

/* Dopasowanie efektu hover dla wyr贸偶nionych wierszy */
.dps-comparison-table .dps-type-main:hover {
    background-color: var(--color-primary-100); 
}

/* --- Responsywno dla telefon贸w --- */

@media (max-width: 768px) {
    /* U偶ywamy ramki zdefiniowanej na pocztku */
    .dps-comparison-table {
        border: 1px solid var(--color-neutral-300);
    }
    
    /* Zapewnienie, 偶e etykiety (data-label) s czytelne */
    .dps-comparison-table td::before {
        content: attr(data-label); 
        /* U偶ywamy ciemniejszego odcienia Amber dla kontrastu w etykiecie */
        color: var(--color-primary-700); 
        font-size: 1rem;
        text-transform: uppercase;
        font-weight: 700;
    }

    /* Dopasowanie koloru ta dla g贸wnych typ贸w na telefonach */
    .dps-comparison-table .dps-type-main {
        background-color: var(--color-primary-50); 
    }
    
    /* Zapewnienie dziaania responsywnoci przez blokowanie domylnego wywietlania */
    .dps-comparison-table, 
    .dps-comparison-table thead, 
    .dps-comparison-table tbody, 
    .dps-comparison-table th, 
    .dps-comparison-table td, 
    .dps-comparison-table tr {
        display: block; 
    }

    .dps-comparison-table thead {
        display: none; 
    }

    .dps-comparison-table tr {
        margin-bottom: 15px;
        border: 1px solid var(--color-neutral-300);
        border-radius: 8px;
    }

    .dps-comparison-table td {
        text-align: right;
        padding-left: 50%;
        position: relative;
        border: none;
        border-bottom: 1px dotted var(--color-neutral-200);
    }

    .dps-comparison-table td:last-child {
        border-bottom: none;
    }

    .dps-comparison-table td::before {
        position: absolute;
        left: 16px; /* Wyr贸wnanie do lewej strony kom贸rki */
        width: 45%;
        text-align: left;
    }
}