generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Placowka {
  id               Int      @id @default(autoincrement())
  nazwa            String
  typ_placowki     String   // "DPS" | "SDS" | "DPS/SDS"
  prowadzacy       String
  ulica            String?
  miejscowosc      String
  kod_pocztowy     String?
  gmina            String
  powiat           String
  wojewodztwo      String
  // TERYT codes
  teryt_wojewodztwo_kod String?
  teryt_powiat_kod      String?
  teryt_gmina_kod       String?
  teryt_gmina_nazwa     String?
  // Geo
  geo_lat          Float?
  geo_lng          Float?
  // Contact
  telefon          String?
  email            String?
  www              String?
  // Details
  liczba_miejsc    Int?
  profil_opieki    String?
  koszt_pobytu     Float?
  data_aktualizacji DateTime @default(now())
  zrodlo           String?
  
  @@map("placowki")
}

model TerytLocation {
  id            Int     @id @default(autoincrement())
  nazwa         String  
  typ           String  // "gmina" | "miejscowosc" | "powiat"
  gmina         String?
  powiat        String
  wojewodztwo   String  @default("ma≈Çopolskie")
  
  @@index([nazwa])
  @@index([powiat])
  @@map("teryt_locations")
}